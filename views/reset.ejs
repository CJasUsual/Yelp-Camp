<% include ./partials/header %>

<div class="row">
    <div class="col-12">
        <legend style="text-align: center">Reset Password</legend>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/reset/<%= token %>" method="post">
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input class="form-control" type="password" autofocus name="password" placeholder="new password">
                </div>
                <div class="form-group">
                    <label for="confirm">New Password</label>
                    <input class="form-control" type="password" name="confirm" placeholder="confirm password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Update Password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>