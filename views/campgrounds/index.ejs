t <% include ../partials/header %>

<!--jumbotron and body-->    
    <header class="jumbotron" style="margin-top: 20px;">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
        <p>View our hand-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>
    
    <div class="row text-center">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card" style="margin-bottom: 10px;">
                    <img class="card-img-top" src=" <%= campground.image %> " alt="Campground">
                        <div class="card-body">
                            <h5 class="card-title"> <%= campground.name %> </h5>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                        </p>
                </div>
            </div>
        <% }) %>    
    </div>
    
    <% include ../partials/footer %>