<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" style="margin-bottom: 10px;">
                    <img class="card-img-top" src=" <%= campground.image %> " alt="Campground">
                        <div class="card-body">
                            <h4 class="float-right">$<%= campground.price %>/night</h4>
                            <h4> <a href=""><%= campground.name %> </a> </h4>
                            <p><%= campground.description %></p>
                            <p>
                                <em class="float">Created by <%= campground.author.username %></em>
                            </p>
                             <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                                <a class="btn btn-sm btn-info" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                                <form class="delete-form"action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            <% } %>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <p>
                                    <a class="btn btn-success float-right" href="/campgrounds/<%= campground._id %>/comments/new">Leave a Review</a>
                                </p>
                            </div>
                            <div class="card-body">
                                <% campground.comments.forEach(function(comment){ %>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <strong> <%= comment.author.username %> </strong>
                                            <span class="float-right">10 days ago</span>
                                            <p>
                                                <%= comment.text %>
                                            </p>
                                        <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                                            <a href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                                                <button class="btn btn-sm btn-info">Edit</button>
                                            </a>
                                            <form class="delete-form" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method=POST>
                                                <button class="btn btn-sm btn-danger">
                                                    Delete
                                                </button>
                                            </form>
                                        <% } %>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>