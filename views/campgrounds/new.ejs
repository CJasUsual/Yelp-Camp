<% include ../partials/header %>


<h1 style="text-align: center;">Create a New Campground</h1>
<div class="row">
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input required class="form-control" type="text" name="campground[name]" placeholder="Enter the campground name">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input required type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input required class="form-control" type="number" name="campground[price]" placeholder="Enter the price"
                    min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input required class="form-control" type="text" name="campground[description]"
                    placeholder="Enter a description">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input required class="form-control" type="text" name="campground[location]" id="location"
                    placeholder="Yosemite National Park, CA">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>